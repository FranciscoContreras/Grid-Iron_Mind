# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/gridironmind

# Pipeline Configuration
MODE=full                    # Options: full, year, update, validate
START_YEAR=2010             # For full mode
END_YEAR=2025               # For full mode
YEAR=2024                   # For year mode

# Optional: Performance tuning
BATCH_SIZE=500              # Records per batch insert (default: 500)
MAX_RETRIES=3               # HTTP request retries (default: 3)
DRY_RUN=false               # Set to true to test without writing to DB

# Logging
RUST_LOG=info               # Options: error, warn, info, debug, trace
